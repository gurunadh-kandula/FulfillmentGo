<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FulfillmentGo.Views.Pages.OpenOrdersPage" Title="OpenOrdersPage"
             xmlns:local="clr-namespace:FulfillmentGo.ViewModels">
    <ContentPage.BindingContext>
        <local:Orders x:Name="viewModel" />
    </ContentPage.BindingContext>
    <StackLayout BackgroundColor="#1F3138">
        <ListView x:Name="listView" 
                   ItemsSource="{Binding OrderCollection}"  RowHeight="100" ItemSelected="OnSelectionAsync">
            <ListView.ItemTemplate>
                <DataTemplate >
                    <ViewCell>
                        <StackLayout>
                        <Label Text="{Binding OrderID}" FontAttributes="Bold" TextColor="White" FontSize="20" />
                        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" Grid.Row="1">
                            <Label   Text="{Binding Notes}" FontAttributes="Bold" TextColor="White" FontSize="15" HorizontalOptions="FillAndExpand"/>
                            <Label   Text="{Binding Status}" TextColor="White" FontSize="10" HorizontalOptions="FillAndExpand"/>
                        </StackLayout>
                        </StackLayout>
                    </ViewCell>
                    </DataTemplate >
            </ListView.ItemTemplate>
    </ListView>
    </StackLayout>
</ContentPage>